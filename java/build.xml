<?xml version="1.0" ?>
<project default="main">
	<property name="message" value="Building the .jar file."  />
	<target name="main" depends="compile,compress">
		<echo>
			Building the .jar file
		</echo>
	</target>

	<target name="compile">
		<javac srcdir="."/>
	</target>

	<target name="compress">
		<jar jarfile="Project.jar" basedir="." includes="*.class" />
	</target>
</project>

	
